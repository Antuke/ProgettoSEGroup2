               </children>
            </AnchorPane>
            <HBox alignment="CENTER_RIGHT" prefHeight="76.0" prefWidth="168.0" spacing="5.0">
               <children>
                  <TextField fx:id="sleepDayField" alignment="CENTER" prefHeight="25.0" prefWidth="49.0" promptText="Giorni" />
                  <TextField fx:id="sleepHourField" alignment="CENTER" prefHeight="25.0" prefWidth="47.0" promptText="Ore" />
                  <TextField fx:id="sleepMinutesField" alignment="CENTER" prefHeight="25.0" prefWidth="52.0" promptText="Minuti" />

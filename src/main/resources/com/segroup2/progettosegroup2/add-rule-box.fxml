<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="248.0" prefWidth="449.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.segroup2.progettosegroup2.Controllers.AddRuleController">
    <children>
        <Label alignment="TOP_CENTER" layoutX="70.0" layoutY="5.0" prefHeight="18.0" prefWidth="309.0" text="DEFINISCI REGOLA" />
        <Button fx:id="addRuleBTN" disable="true" layoutX="370.0" layoutY="210.0" mnemonicParsing="false" onAction="#commitRule" text="Aggiungi" />
      <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="23.0" prefHeight="63.0" prefWidth="421.0" spacing="40.0">
         <children>
              <ComboBox fx:id="triggerPickerComboBox" prefWidth="150.0" promptText="Scegli il trigger" />
            <StackPane fx:id="triggerStackPane" prefHeight="46.0" prefWidth="193.0">
               <children>
                   <HBox fx:id="timePickerHBox" alignment="CENTER" prefHeight="46.0" prefWidth="225.0" spacing="10" visible="false" xmlns:fx="http://javafx.com/fxml/1">
                       <children>
                        <TextField fx:id="hoursTextField" alignment="CENTER" prefHeight="26.0" prefWidth="50.0" promptText="Ore" />
                        <Label text=":" />
                        <TextField fx:id="minutesTextField" alignment="CENTER" prefHeight="26.0" prefWidth="50.0" promptText="Minuti" />
                       </children>
      
                       <padding>
                           <Insets bottom="10" left="10" right="10" top="10" />
                       </padding>
                   </HBox>
                  <HBox fx:id="dayPickerHBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" visible="false">
                     <children>
                        <ComboBox fx:id="dayPickerComboBox" prefWidth="150.0" promptText="Scegli il giorno" />
                     </children>
                  </HBox>
               </children>
            </StackPane>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="86.0" prefHeight="63.0" prefWidth="393.0" spacing="40.0">
         <children>
      
              <ComboBox fx:id="actionPickerComboBox" prefWidth="150.0" promptText="Scegli l'azione" />
            <StackPane fx:id="actionStackPane" prefHeight="26.0" prefWidth="200.0">
               <children>
                  <Label fx:id="defaultLabelText" text="Testo di default: Promemoria!" visible="false" />
                  <Label fx:id="deafultAudioLabel" text="L'audio di default: default_audio.wav" visible="false" />
               </children>
            </StackPane>
         </children>
      </HBox>
      <HBox layoutX="17.0" layoutY="150.0" prefHeight="76.0" prefWidth="343.0">
         <children>
            <Label prefHeight="17.0" prefWidth="57.0" text="Rule type: " />
            <VBox prefHeight="76.0" prefWidth="271.0" spacing="5.0">
               <children>
                  <RadioButton fx:id="normalRuleRadioBtn" lineSpacing="20.0" mnemonicParsing="false" selected="true" text="Normal" />
                  <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="190.0" spacing="10.0">
                     <children>
                        <RadioButton fx:id="sleepingRuleRadioBtn" lineSpacing="20.0" mnemonicParsing="false" text="Sleeping" />
                        <TextField fx:id="sleepDayField" prefHeight="25.0" prefWidth="49.0" promptText="Giorni" />
                        <TextField fx:id="sleepHoiurField" alignment="CENTER" prefHeight="25.0" prefWidth="47.0" promptText="Ore" />
                        <TextField fx:id="sleepMinutesField" prefHeight="25.0" prefWidth="52.0" promptText="Minuti" />
                     </children>
                  </HBox>
                  <RadioButton fx:id="singleTimeRuleRadioBtn" lineSpacing="20.0" mnemonicParsing="false" text="Single" />
               </children>
            </VBox>
         </children>
      </HBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="332.0" prefWidth="515.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.segroup2.progettosegroup2.Controllers.AddRuleComplexController">
   <children>
      <HBox prefHeight="100.0" prefWidth="384.0">
         <children>
            <Button fx:id="addActionBTN" mnemonicParsing="false" onAction="#openAddAction" prefHeight="26.0" prefWidth="94.0" text="Add Action">
               <HBox.margin>
                  <Insets left="30.0" right="30.0" top="30.0" />
               </HBox.margin></Button>
            <TextArea fx:id="actionsTextArea" editable="false" prefHeight="35.0" prefWidth="234.0">
               <HBox.margin>
                  <Insets left="30.0" top="5.0" />
               </HBox.margin>
            </TextArea>
         </children>
      </HBox>
      <HBox layoutX="5.0" layoutY="118.0" prefHeight="78.0" prefWidth="384.0">
         <children>
            <Button fx:id="addTriggerBTN" mnemonicParsing="false" onAction="#openAddTrigger" prefHeight="26.0" prefWidth="84.0" text="Add Trigger">
               <HBox.margin>
                  <Insets left="25.0" top="30.0" />
               </HBox.margin></Button>
            <VBox prefHeight="37.0" prefWidth="54.0">
               <HBox.margin>
                  <Insets bottom="20.0" top="25.0" />
               </HBox.margin>
            </VBox>
            <TextArea fx:id="triggersTextArea" editable="false" prefHeight="78.0" prefWidth="220.0">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></TextArea>
         </children>
      </HBox>
      <Button fx:id="addRuleBTN" layoutX="442.0" layoutY="292.0" mnemonicParsing="false" onAction="#commitRule" text="Commit" />
      <HBox layoutX="31.0" layoutY="216.0" prefHeight="76.0" prefWidth="343.0">
         <children>
            <Label prefHeight="17.0" prefWidth="57.0" text="Rule type: " />
            <VBox prefHeight="76.0" prefWidth="271.0" spacing="5.0">
               <children>
                  <RadioButton fx:id="normalRuleRadioBtn" lineSpacing="20.0" mnemonicParsing="false" selected="true" text="Normal" />
                  <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="190.0" spacing="10.0">
                     <children>
                        <RadioButton fx:id="sleepingRuleRadioBtn" lineSpacing="20.0" mnemonicParsing="false" text="Sleeping" />
                        <TextField fx:id="sleepDayField" prefHeight="25.0" prefWidth="49.0" promptText="Giorni" />
                        <TextField fx:id="sleepHourField" alignment="CENTER" prefHeight="25.0" prefWidth="47.0" promptText="Ore" />
                        <TextField fx:id="sleepMinutesField" prefHeight="25.0" prefWidth="52.0" promptText="Minuti" />
                     </children>
                  </HBox>
                  <RadioButton fx:id="singleTimeRuleRadioBtn" lineSpacing="20.0" mnemonicParsing="false" text="Single" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
